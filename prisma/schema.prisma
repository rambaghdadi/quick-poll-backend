generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PollQuestion {
  id String @id @unique @default(cuid())
  createdAt DateTime @default(now())
  endsAt DateTime
  question String 
  optionLimit Int?
  voters String[] 
  allowNewOptions Boolean 
  totalVotes Int @default(0)
  options PollOption[] 
}

model PollOption {
  id String @id @unique @default(cuid())
  title String 
  vote Int @default(0)
  voters String[] //fix duplication
  createdAt DateTime @default(now())
  questionId String
  question PollQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}
